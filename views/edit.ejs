<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blogdata.title%> Post</div>
  <form class ="ui form" action="/blogs/<%=blogdata._id%>?_METHOD=PUT" method="POST">
      <div class=field>
          <label>Title</label>
            <input type ="text" name="blog[title]" value="<%=blogdata.title%>">
      </div>
        <div class=field>
          <label>Image</label>
        <input type ="text" name="blog[image]"  value="<%=blogdata.image%>">
      </div>
        <div class=field>
          <label>Content</label>
          <textarea name="blog[body]"><%=blogdata.body%></textarea>
              
      </div>
    <button class="ui blue basic button big">Submit</button>
</form>  
    
</div>



<% include ./partials/footer %>
